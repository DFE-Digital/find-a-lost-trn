<%= form_with model: @email_form, url: email_path do |f| %>
  <%= f.govuk_error_summary %>
  <%= f.govuk_email_field(
        :email,
        label: { tag: 'h1', size: 'xl', text: 'What is your email address?' },
        hint: { text: 'If we can find your TRN, weâ€™ll send it to the email address you give.' },
        autocomplete: "email"
      )
  %>
  <%= f.govuk_submit prevent_double_click: false %>
<% end %>
