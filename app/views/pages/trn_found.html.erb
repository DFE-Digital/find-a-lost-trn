<% content_for :page_title, 'We’ve found your TRN' %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= govuk_panel(
      title_text: 'We’ve found your TRN',
      classes: %w[govuk-!-margin-bottom-6]
    ) do %>
      We’ve sent it to<br />
      <strong><%= shy_email @trn_request.email %></strong>
    <% end %>

    <h2 class="govuk-heading-m">Give feedback</h2>
    <p class="govuk-body">
      <a class="govuk-link" href="https://forms.gle/3LGJXe9EFaeQbFgP7">What did you think of this service?</a> (takes 30 seconds)
    </p>
  </div>
</div>
